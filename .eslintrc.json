{
    "env": {
        "browser": true,
        "commonjs": true,
      "node": true,
      "mocha": true,
        "es6": true
    },
   "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015
    },
  "plugins": [
    "json","prettier"],
    "rules": {
      "prettier/prettier": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
