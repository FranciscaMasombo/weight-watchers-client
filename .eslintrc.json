{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
   "parser": "babel-eslint",
    "extends":
    "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {

        "indent": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
